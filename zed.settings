{
  /* Autosave */
  "autosave": {
    "after_delay": {
      "milliseconds": 400
    }
  },

  /* Restore on Startup */
  "restore_on_startup": "none",

  /* Buffer */
  "buffer_font_family": "Monaco",
  "buffer_font_size": 14,
  "buffer_line_height": "comfortable",

  /* Edit Predictions */
  "edit_predictions": {
    "mode": "subtle",
    "enabled_in_assistant": false
  },

  "cursor_blink": false,

  /* Editor Scrollbar */
  "scrollbar": {
    "show": "never"
  },

  /* Editor Tabs */
  "tabs": {
    "close_position": "left",
    "file_icons": true,
    "git_status": true
  },

  /* Formmatter */
  "formatter": null,

  /* File Types */
  "file_types": {
    "JSONC": ["*.json", "*.jsonl"]
  },

  /* Diagnostics */
  "diagnostics": {
    "inline": {
      "enabled": true,
      "min_column": 100
    }
  },

  /* Icon Theme */
  "icon_theme": "Zed (Default)",

  /* Inlay Hints */
  "inlay_hints": {
    "enabled": true
  },

  /* Languages */
  "languages": {
    "HTML": {
      "tab_size": 2
    },
    "Svelte": {
      "tab_size": 2
    },
    "Git Config": {
      "tab_size": 2
    },
    "CSS": {
      "tab_size": 2
    },
    "C++": {
      "tab_size": 2
    },
    "C": {
      "tab_size": 2
    },
    "Markdown": {
      "show_edit_predictions": true,
      "soft_wrap": "bounded"
    },
    "Make": {
      "hard_tabs": true
    },
    "Python": {
      "language_servers": ["pylsp", "!pyright"]
    }
  },

  /* Wrap Guides (Verical Rulers) */
  "wrap_guides": [80],

  /* Telemetry */
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  /* Terminal */
  "terminal": {
    "detect_venv": {
      "on": {
        "directories": [".venv"],
        "activate_script": "default"
      }
    }
  },

  /* Theme */
  "theme": {
    "mode": "light",
    "light": "Ayu Light",
    "dark": "Ayu Dark"
  },

  /* Vim */
  "vim_mode": true,
  "relative_line_numbers": true,

  /* Project Panel */
  "project_panel": {
    "dock": "right"
  },

  /* Assistant Panel */
  "assistant": {
    "version": "2",
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-pro-preview-03-25"
    },
    "inline_assistant_model": {
      "provider": "google",
      "model": "gemini-2.0-flash"
    },
    "commit_message_model": {
      "provider": "google",
      "model": "gemini-2.0-flash"
    }
  },

  "language_models": {
    "google": {
      "available_models": [
        {
          "name": "gemini-2.5-pro-preview-03-25",
          "display_name": "Gemini 2.5 Pro Preview",
          "max_tokens": 1048576
        }
      ]
    }
  },

  /* UI Font */
  "ui_font_family": ".SystemUIFont",
  "ui_font_fallbacks": ["Zed Plex Sans"],
  "ui_font_size": 16,

  /* Misc. */
  "auto_signature_help": true,
  "show_signature_help_after_completion": false
}
